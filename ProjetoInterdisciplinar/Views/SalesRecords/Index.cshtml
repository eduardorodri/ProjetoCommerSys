@{
    ViewData["Title"] = "Registro de Vendas";
}
<br>
<br>
<br>
<br>
<br>
<h2 class="text-center my-4">@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="SimpleSearch" class="card p-3">
            <fieldset>
                <legend class="mb-4">Busca Simples</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-sm-3 col-form-label">Insira Data Inicial</label>
                    <div class="col-sm-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-sm-3 col-form-label">Insira Data Final</label>
                    <div class="col-sm-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-md-6">
        <form asp-action="GroupingSearch" class="card p-3">
            <fieldset>
                <legend class="mb-4">Busca Agrupada</legend>
                <div class="form-group row">
                    <label for="minDate" class="col-sm-3 col-form-label">Insira Data Inicial</label>
                    <div class="col-sm-9">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="maxDate" class="col-sm-3 col-form-label">Insira Data Final</label>
                    <div class="col-sm-9">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="offset-sm-3 col-sm-9">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

<style>
    h2 {
        color: #343a40;
    }

    .card {
        margin-top: 20px;
    }

    legend {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>
