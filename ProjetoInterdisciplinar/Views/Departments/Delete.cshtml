@model ProjetoInterdisciplinar.Models.Department

@{
    ViewData["Title"] = "Apagar";
}
<br>
<br>
<br>
<br>
<h2 class="my-4">Apagar</h2>

<h3>Tem certeza de que deseja excluir esse departamento?</h3>
<div class="card mb-3">
    <div class="card-body">
        <h4 class="card-title">Departamento:</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>@Html.DisplayNameFor(model => model.Name)</dt>
            <dd>@Html.DisplayFor(model => model.Name)</dd>
        </dl>
        <br>
        <form asp-action="Delete" class="mb-3">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar para lista</a>
        </form>
    </div>
</div>

<style>
    h2, h3, h4 {
        color: #343a40;
    }

    .btn {
        margin-right: 10px;
    }

    .card {
        width: 100%;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

    .card-body {
        padding: 20px;
    }
</style>