@model ProjetoInterdisciplinar.Models.Seller

@{
    ViewData["Title"] = "Deletar";
}
<br>
<br>
<br>
<br>
<h2>@ViewData["Title"]</h2>
<h3>Tem certeza de que deseja excluir?</h3>

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Vendedor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Nascimento)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Nascimento)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.SalarioBase)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.SalarioBase)
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar para lista</a>
    </form>
</div>

<style>
    h2 {
        color: #343a40;
    }

    .card {
        margin-top: 20px;
    }

    .card-title {
        margin-bottom: 20px;
    }

    .btn {
        margin-right: 10px;
    }

    dt {
        font-weight: bold;
    }
</style>
